<div class="row">
    <div class="col-md-12">
        {{#each department}}
        <h2>{{this.departmentName}} - Department: {{ this.departmentId}}</h2>
        <hr />
        <form method="post" action="/departments/update">
            <fieldset>
                <input id="departmentId" name="departmentId" type="hidden"  value="{{this.departmentId}}"/>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="departmentName">Department&nbsp;Name</label>
                            <input class="form-control" id="departmentName" name="departmentName" type="text" value="{{this.departmentName}}" />
                        </div>
                    </div>
                </div>
            </fieldset>
            <hr />
            <input type="submit" class="btn btn-primary pull-right" value="Update Department" /><br /><br /><br />
        </form>
        {{/each}}
    </div>
</div>
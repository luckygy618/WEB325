<div class="row">
  <div class="col-md-12">
    <h2>Employees
      <a href="/employees/add" class="btn btn-success pull-right">Add New Employee</a>
    </h2>
    <hr />
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>

            <th scope="col">Employee&nbsp;Num</th>
            <th scope="col"> Full&nbsp;Name</th>
            <th scope="col">Email</th>
            <th scope="col">Address</th>
            <th scope="col">Manager&nbsp;ID</th>
            <th scope="col">Status</th>
            <th scope="col">Department</th>
            <th scope="col">Hired&nbsp;On</th>
          </tr>
        </thead>
        {{#each employees}}
        <tbody>
          <tr>
            <td>{{this.employeeNum}}</td>
            <td><a href="/employee/{{this.employeeNum}}">{{this.firstName}} {{this.lastName}}</a></td>
            <td><a href="mailto:{{this.email}}">{{this.email}}</a></td>
            <td>{{this.addressStreet}} {{this.addressCity}} {{this.addressState}} {{this.addressPostal}}</td>
            <td><a href="/employees?manager={{this.employeeManagerNum}}">{{this.employeeManagerNum}}</a></td>
            <td><a href="/employees?status={{this.status}}">{{this.status}}</a></td>
            <td><a href="/employees?department={{this.department}}">{{this.department}}</a></td>
            <td>{{this.hireDate}}</td>
             <td><a class="btn btn-danger" href="/employees/delete/{{this.employeeNum}}">remove</a></td>

          </tr>
          {{else}}
          <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
          </div>
          {{/each}}
        </tbody>
      </table>
    </div>